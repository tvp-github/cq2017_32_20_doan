<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ygaps.travelapp.tab2_review"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/add_memberbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@drawable/style_border_no_radius">

        <EditText
            android:id="@+id/edtMemName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Invite person"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/btnAddMem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/btn_delete"
            android:text="Invite"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ctrl_stop_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_add_stop_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_delete"
            android:text="Add Stop Points"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_apply_changes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_delete"
            android:text="Apply changes"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>