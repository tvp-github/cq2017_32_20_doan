<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:src="@drawable/user"
                android:id="@+id/fb_avatar" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fb_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chung Tuyet"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/fb_ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:stepSize="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                 />
            <!--        <TextView-->
            <!--            android:id="@+id/fb_date"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="04/08/2019"-->
            <!--            android:textSize="15sp"-->
            <!--            android:layout_marginLeft="30dp"/>-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fb_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_review"
            android:text="Trải nghiệm thật tuyệt vời !!!"
            android:textSize="15sp"
            android:textColor="@color/textColorPrimaryDark"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>